<form>
  <div class="search-bar-org-page">
    <input
      class="btn waves-effect waves-light blue lighten-1 filter-btn"
      type="submit"
      value="all"
      id="show-all"
    >

    <% @causes.each do |c| %>

      <input
        class="btn waves-effect waves-light blue lighten-1 filter-btn"
        type="submit"
        name="category_names[]"
        value="<%= c.name %>"
      >
    <% end %>
  </div>
</form>