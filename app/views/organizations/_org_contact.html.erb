<%# contact details formatted%>
<p>
  <% if @org.email %>
    <span><i class="tiny material-icons">email</i>
    <%= mail_to 'email', @org.email %><br></span>
  <% end %>
  <i class="tiny material-icons">phone</i>
  <%# format phone number %>
  <%= number_to_phone(@org.primaryphone, area_code: true) %><br><br>
  <% if @org.secondaryphone %><br>
    <i class="tiny material-icons">phone</i>
    <%= number_to_phone(@org.secondaryphone, area_code: true) %><br>
  <% end %>
  <%= @org.address %><br>
  <% if @org.suite %>
    <%= @org.suite %><br>
  <% end %>
  <%= @org.city %><br>
  <%= @org.postal %><br>
  <%= @org.province %><br>
</p>