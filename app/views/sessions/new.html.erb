<div class="row auth-form">
  <%= form_tag '/login' do %>
    <fieldset>
    <div id="legend">
      <legend class="signin">Sign In</legend>
    </div>
    <div class="control-group">
      <label class="control-label" for="user_first_name">Email:</label>
      <div class="controls">
        <%= text_field_tag :email %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="user_first_name">Password:</label>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= submit_tag 'Submit', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>

<div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div>

<div id="fb-root"></div>

<%= javascript_include_tag 'facebook', 'data-turbolinks-track': 'reload' %>