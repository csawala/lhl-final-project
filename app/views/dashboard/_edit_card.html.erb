<div class="center-align">
  <!-- cancel button -->
  <div class="cancel-btn right-align">
    <%= link_to dashboard_path,
        class: "btn-floating tooltipped btn-small waves-effect waves-light red",
            "data-position": "left",
            "data-delay": "50",
            "data-tooltip": "Cancel Edit",
        id: "cancel-btn" do %>
      <i class="material-icons">not_interested</i>
    <% end %>
  </div>
  <!-- title -->
  <h5>Edit your <%= @edit_card.needs ? 'need' : 'offer' %> card</h5>
</div>

<div class="card-edit">
  <!-- Description -->
  <div class="need-offer-form edit input-field">

    <%= hidden_field_tag(:org_id, @org.id)%>
    <%= hidden_field_tag(:card_id, @edit_card.id)%>

    <p class="center-align">
      <!-- ACTIVE toggle -->
      <span>
        <input type="checkbox"
               class="toggle-active"
               name="setactive"
               style="font-size: 1.5em"
        />

        <label for="setactive"
               class="toggle-active form-toggle">
          Make card <%= @edit_card.active ? 'in' : ''%>active
        </label>
      </span>
      <!-- URGENT toggle -->
      <% if @edit_card.needs %>
        <span>
          <input type="checkbox"
                 class="toggle-active form-toggle"
                 name="seturgent"
                 style="font-size: 1.5em"
          />

          <label for="seturgent" class="toggle-urgent form-toggle">
            <% if @edit_card.urgent? %>
              Mark not urgent
            <% else %>
              Mark urgent
              <i class="material-icons tiny urgent">error</i>
            <% end %>
          </label>
        </span>
      <% end %>
    </p>

    <p><strong><em>Type:</em></strong></p>
    <%= select_tag(:goods_type, options_for_select(@goods_types, @edit_card.goods_type_id)) %>

    <p><strong><em>Description:</em></strong></p>
    <%= text_field_tag(:description,
                        value = nil,
                        options = {
                          class: "materialize-textarea active",
                          autofocus: "autofocus",
                          value: "#{@edit_card.description}"
                        }
                      )
    %>

    <%= render 'form_submit_button' %>

  </div>
</div>