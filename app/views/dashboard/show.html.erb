<section class="org-show">
  <div class="dashboard-container">
    <h4 class="center-align">Welcome, <strong><%= @org.name %></strong></h4>

    <!-- Toggle Render Section for Update Org Details -->
    <div class="center-align">
      <a id="toggle-org-form-button"
         class="waves-effect waves-light btn">
        update organization details
      </a>

      <a class="waves-effect waves-light btn"
         id="toggle-new-need-button">
        new need
      </a>

      <a class="waves-effect waves-light btn"
         id="toggle-new-offer-button">
        new offer
      </a>
    </div><br>


    <!-- Toggles -->
    <div class="row">

      <!-- Organization EDIT -->
      <div class="toggle-hide" id="toggle-org-form">
        <%= render partial: 'org_form' %>
      </div>

      <!-- New NEED -->
      <div class="toggle-hide" id="toggle-new-need">
        <div class="row dashboard-form">
          <%= form_tag(cards_path) do %>
            <%= hidden_field_tag(:type, 'needs')%>
            <h4 class="center-align">What Are You In Need Of?</h4>
            <%= render partial: 'new_need_offer' %>
          <% end %>
        </div>
      </div>

      <!-- New OFFER -->
      <div class="toggle-hide" id="toggle-new-offer">
        <div class="row dashboard-form">
          <%= form_tag(cards_path) do %>
            <%= hidden_field_tag(:type, 'offers') %>
            <h4 class="center-align">What Are You Offering?</h4>
            <%= render partial: 'new_need_offer' %>
          <% end %>
        </div>
      </div>

      <!-- edit card -->
      <% if @edit_card %>

        <div class="toggle-hide" id="toggle-edit-card">
          <%= form_tag("/cards/#{@edit_card.id}", method: 'patch') do %>

            <%= hidden_field_tag(:type, 'need')%>
            <h4 class="center-align">Edit your <%= @edit_card.needs ? 'need' : 'offer' %> card</h4>
            <%= render partial: 'edit_card' %>

          <% end %>
        </div>

      <% end %>

    </div>
    <br>

    <!-- Org Needs/Offers -->
    <%= render 'org_needs_offers' %>

  </div>
</section>